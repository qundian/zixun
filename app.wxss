@import '/style/weui.wxss';
@import '/components/weui-wxss/dist/style/weui.wxss';
page{
  color:#333333;
  padding-bottom: 1.5em;
}
.kong{
  width:100%;
  height:9px;
  background:#f1f1f1;
}
.leader{
  padding: .75em 6.1%;
}
.leader view{
  width:3px;
  height:15px;
  background:#2F69F8;
  border-radius: 3px;
  display:inline-block;
  vertical-align:middle;
}
.leader text{
  vertical-align:middle;
  margin-left:4px;
  font-weight:bold;
}
#hotWords{
  padding:0 1em;
  margin-top: -.4em;
}
#hotWords text{
  display:inline-block;
  padding: 0 .4em;
  font-size: .8em;
  color: #F00000;
}
.teacherList{
  margin:0 1em;
  padding: 1.1em .4em;
  box-shadow: 1px 1px 5px 0 rgba(0,0,0,0.06), -2px 1px 2px 0 rgba(0,0,0,0.06);
  border-radius: 6px;
  margin-bottom: .9em;
  position: relative;
  overflow:hidden;
}
.tesacherListRight{
  padding-left: 6.5em;
}
.teacherListImg{
  position: absolute;
  top: 1.2em;
  left: .4em;
  z-index: 1;
  width: 6em;
  height: 6.5em;
}
.teacherListImg image{
  width:100%;
  height:100%;
  border-radius:.4em;
}
.teacherListP1{
  position: relative;
  margin-top: -.3em;
}
.teacherListP1>text{
  font-weight: bold;
  margin-right: .5em;
}
.teacherListP1 image{
  width:.7em;
  height: .7em;
}
.teacherListPrice{
  position: absolute;
  top:.2em;
  right:.4em;
  z-index: 1;
  font-size: .7em;
}
.teacherListPrice text{
  color: #F00000;
}
.teacherListShow{
  font-size: .8em;
  color: #333333;
}
.teacherListBest text{
  display: inline-block;
  padding: .1em .4em;
  border-radius: .2em;
  background: #EAEAEA;
  font-size: 0.625em;
  margin-right: .4em;
  color:#666;
}
.teacherListDate{
  display: inline-block;
  font-size: 0.8em;
  color: #aaa;
  margin-right: 1em;
}
.teacherListDate text{
  font-weight: bold;
  color: #333333;
}
.teacherListBtn{
  position: absolute;
  bottom: 1.1em;
  right:0.6em;
  z-index: 1;
  padding:.3em .5em;
  font-size: .8em;
  color: #fff;
  background: #2F69F8;
  display: inline-block;
  border-radius: 2em;
  line-height: normal;
}
#mask{
  position: fixed;
  top:0;
  left:0;
  right:0;
  bottom:0;
  z-index:10;
  background:rgba(0,0,0,0.5);
}
.weui-tabbar{
  position:fixed;
  bottom:0;
  left:0;
  z-index:2;
  width:100%;
}
.weui-demo-dialog{
  visibility:hidden;
  opacity:0;
  transition:all .3s;
}
.weui-half-screen-dialog{
  padding: 0 calc(10px + constant(safe-area-inset-right)) constant(safe-area-inset-bottom) calc(10px + constant(safe-area-inset-left));
  padding: 0 calc(10px + env(safe-area-inset-right)) env(safe-area-inset-bottom) calc(10px + env(safe-area-inset-left));
  transition:all .3s;
  transform:translateY(100%);
}
.weui-demo-dialog_show{
  visibility:visible;
  opacity:1;
}
.weui-demo-dialog_show .weui-half-screen-dialog{
    transform:translateY(0);
}
.empty,.getMore{
  font-size: .85em;
  color: #aaa;
  text-align: center;
  padding: 1.5em 0;
}
button{
  font-weight: bold;
}
